#!/usr/bin/env bash

if [[ ${MODE} == "BUILD" ]]; then
  echo "Building"
  cd /input
  /root/bin/particle login --token ${PARTICLE_TOKEN}
  /root/bin/particle compile ${BUILD_ARCH} --saveTo /output/fs-lamp-photon.bin
elif [[ ${MODE} == "FLASH" ]]; then
  echo "Flashing"
  cd /output
  /root/bin/particle login --token ${PARTICLE_TOKEN}
  /root/bin/particle flash ${BOARD} fs-lamp-photon.bin
fi
